<style>
  nav {
    background-color: transparent;
    display: flex;
    width: 1200px;
    justify-content: space-between;
    align-items: center;
    padding: 0 2em;
    position: fixed;
    background: transparent;
    backdrop-filter: blur(5px);
    z-index: 100;
    ul {
      display: flex;
      justify-content: center;
      list-style: none;
      padding: 1em;
      li {
        color: var(--white);
        font-size: 1.2rem;
        padding: 1em;
        cursor: pointer;
      }
    }
    p {
      font-size: 2em;
      font-weight: bolder;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 5px;
      color: var(--white);
    }
  }
  span {
    color: var(--pink);
  }
</style>
<script>
  const buttons = document.querySelectorAll(".navButton")
  buttons.forEach((button) => {
    button.addEventListener("click", () => {
      const sectionId = button.name
      const section = document.getElementById(`#{sectionId}`)
      if (section) {
        section.scroll({ behavior: "smooth" })
      }
    })
  })
</script>
